    },




# -------------------------------------------------
# API: Send region message with replaced number
# -------------------------------------------------
@app.post("/run/{region}")
def run_region(region: str, user_input: str):
    if region not in region_map:
        raise HTTPException(status_code=404, detail="Invalid region")

    data = region_map[region]

    try:
        updated_message = replace_number(data["message"], user_input)

        sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
        sock.connect((data["ip"], data["port"]))
        sock.sendall(updated_message.encode("utf-8"))

        response= sock.recv(1024).decode("utf-8")
        print("Received from server:", response)
        if len(response) >= 170:
            extracted = response[141:141+13]
            print("Extracted 9 characters:", extracted)
        else:
            print("Response too short for extraction.")
        sock.close()

        return {
            "region": region,
            "ip": data["ip"],
            "port": data["port"],
            "message": extracted,

            "status": "Message sent successfully"
        }

    except Exception as e:
        return {
            "region": region,
            "status": "Failed",
            "error": str(e)
        }
